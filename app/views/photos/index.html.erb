<div class="shadow-5">
  <div id="photography-index-page">
    <br>
    <div class="row multi-columns-row">
      <% @category.each do |c| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
          <%= link_to album_path(c) do %>
            <span class="album block">
              <span class="thumb">
                <span class="polaroid shadow-5" style="background-image:url('http://lorempixel.com/250/250/cats/');">
                </span>
              </span>
              <span class="thumb">
                <span class="polaroid shadow-5" style="background-image:url('http://lorempixel.com/251/251/cats/');">
                </span>
              </span>
              <span class="thumb">
                <span class="polaroid shadow-5" style="background-image:url('http://lorempixel.com/252/252/cats/');">
                </span>
              </span>
              <span class="thumb">
                <span class="polaroid shadow-5" style="background-image:url('http://lorempixel.com/253/253/cats/');">
                </span>
              </span>
              <span class="link"><%= c.name %>
              </span>
            </span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
