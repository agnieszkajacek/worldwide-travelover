      grecaptcha.ready(function() {
          grecaptcha.execute('<%= ENV["RECAPTCHA_PUBLIC_KEY"] %>', {action: 'homepage'}).then(function(token) {
            document.getElementById('recaptcha_token_field').value = token;

          });
