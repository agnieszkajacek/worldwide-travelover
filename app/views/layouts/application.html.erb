      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <%= render 'shared/nav' %>

    <div class="holygrail-body">
      <%= yield %>
    </div>

    <%= render "shared/footer"%>

    <script id="dsq-count-scr" src="//worldwide-travelover-new.disqus.com/count.js" async></script>
