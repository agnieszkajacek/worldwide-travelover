<%= simple_form_for contact, url: contact_path do |f| %>
  <div class="form-group row">
    <div class="col-lg-12">
      <%= f.input :name, input_html: {class: "form-control form-control-sm"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-12">
      <%= f.input :email, input_html: {class: "form-control form-control-sm"} %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-lg-12">
      <%= f.input :body, as: :text, input_html: {class: "form-control form-control-sm"} %>
    </div>
  </div>

  <%= f.button :submit, class: "btn btn-success" %>
<% end %>