<div class="container frame">
  <% @categories.each do |category| %>
    <% if category.ancestry == nil %>
      <div class=" edit-link">
        <%= link_to category.name, edit_category_path(category), class: " main-cat" %>
      </div>
    <% else %>
      <div class="edit-link">
        <%= link_to category.name, edit_category_path(category), class: "sub-cat" %>
      </div>
    <% end %>
  <% end %>
</div>
