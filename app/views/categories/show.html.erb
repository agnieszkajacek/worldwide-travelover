<div class="category-header">
  <div class="category-header">
    <p class="category">Category: </p>
    <p class="category-name"><%= @category.name %></p>
  </div>
</div>
<div class="container">
  <div class="articles">
    <div class="row">
      <div class="col-lg-9 col-12">
        <% @posts.each do |post| %>
          <article class="article-container">
            <div class="article-card">
              <div class="article-image">
                <img class=" img-thumbnail" src="<%= post.cover_url(:thumbnail) %>">
              </div>
              <div class="article-body">
                <h1 style="margin: 0;">
                  <%= link_to "#{post.title}", post, class: "post-title" %>
                </h1>
                <div class="center-date">
                  <span class="article-time">
                    <%= post.published.to_date.strftime("%d %B %Y") %>
                  </span>
                </div>
                <div class="card-body with-padding">
                  <%= post.introduction %>
                </div>
                  <%= link_to "Czytaj wiÄ™cej...", post, class: "read-more" %>
              </div>
            </div>
          </article>
        <% end %>
      </div>
      <%= render 'shared/sidebar'%>
    </div>
  </div>
</div>
