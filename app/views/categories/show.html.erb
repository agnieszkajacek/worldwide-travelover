<div class="category-header">
  <div class="category-header">
    <p class="category">Category: </p>
    <p class="category-name"><%= @category.name %></p>
  </div>
</div>
<div class="container-fluid">
  <div class="articles">
    <div class="row">
      <div class="col-lg-9 col-12">
        <% @posts.each do |post| %>
          <article class="article-container">
            <img class="card-img-top article-image img-thumbnail" src="<%= post.cover_url(:medium) %>">
            <div class="article-card">
              <h1 class="center-title">
                <%= link_to "#{post.title}", post, class: "post-title" %>
              </h1>
              <div class="fancy-line">
                <span class="article-time">
                  <%= post.published.to_date.strftime("%d %B %Y") %>
                </span>
              </div>
             <div class="card-body"><%= post.introduction %></div>
             <%= link_to "Czytaj wiÄ™cej", post, class: "read-more" %>
            </div>
          </article>
        <% end %>
      </div>
      <div class="col-lg-3 col-12">
        <div class="sidebar">
          <%= render"shared/about_me" %>
        </div>
        <div class="sidebar">
          <%= render"shared/badges" %>
          <%= render"shared/instagram_feed" %>
          <%= render"shared/facebook" %>
        </div>
      </div>
    </div>
  </div>
</div>
