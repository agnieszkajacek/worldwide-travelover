<div class="category-header">
  <div class="category-header">
    <p class="category">Category: </p>
    <p class="category-name"><%= @category.name %></p>
  </div>
</div>
<div class="container">
  <div class="articles">
    <% @posts.each do |post| %>
      <article class="article-container shadow-5">
        <div class="article-card">
           <h1>
             <%= link_to "#{post.title}", post, class: "post-title" %>
           </h1>
           <div class="article-time"><%= post.created_at.to_date.strftime("%d %B %Y") %></div>
          <div class="card-body"><%= truncate(strip_tags(markdown(post.content)), length: 450) %></div>
          <%= link_to "Czytaj wiÄ™cej", post, class: "read-more" %>
        </div>
        <img class="article-image" src="<%= post.cover_url(:thumbnail) %>">
      </article>
    <% end %>
  </div>
</div>
