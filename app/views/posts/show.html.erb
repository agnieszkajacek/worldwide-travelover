<div class="container">
  <div class="articles">
    <article class="article-container">
        <div class="article-card">
           <h1 class="post-title">
             <%= @post.title %>
           </h1>
           <div class="article-time"><%= @post.created_at.to_date.strftime("%d %B %Y") %></div>
          <div class="card-body"><%= @post.content %></div>
        </div>
    </article>
    <%= render 'shared/disqus' %>
  </div>
</div>
