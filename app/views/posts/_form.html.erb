<%= simple_form_for @post do |f| %>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label col-form-label-sm">Category</label>
    <div class="col-sm-8">
      <%= f.input :category_id, collection: @category, input_html: {class: "form-control form-control-sm"}, label: false %>

    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label col-form-label-sm">Title</label>
    <div class="col-sm-8">
      <%= f.input :title, input_html: {class: "form-control form-control-sm"}, label: false %>
    </div>
  </div>
  <div class="form-group row">
    <label class="col-sm-1 col-form-label col-form-label-sm">Cover</label>
    <div class="col-sm-8">
      <%= f.file_field :cover, label: false %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-form-label col-form-label-sm">Content</label>
      <%= md_simple_editor  do %>
        <%= f.input :content, input_html: {class: "form-control form-control-sm big-textarea"}, label: false, as: :text %>
      <% end %>
  </div>
  <%= f.submit "Save", class: "btn btn-sm btn-outline-success" %>
<% end %>
