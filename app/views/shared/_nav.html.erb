<div class="container-fluid">
  <header class="blog-header">
    <div class="first-nav">
      <div class="col-4">
        <% if user_signed_in? %>
          <a href="/posts/new" class="btn btn-sm btn-outline-warning">New post</a>
        <% else %>
        <a class="subscribe">Subscribe</a>
        <% end %>
      </div>
      <div class="col-4 text-center">
        <a href="/" class="main-title">Worldwide Travelover</a>
      </div>
      <div class="col-4 right-items">
        <% if user_signed_in? %>
          <a><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-outline-secondary" %></a>
        <% elsif cookies[:username] == "agnieszka" %>
          <a><%= link_to "Log in", new_user_session_path, class: "btn btn-sm btn-outline-secondary" %></a>
        <% end %>
      </div>
    </div>
  </header>

  <nav class="navbar navbar-expand-lg navbar-light menu-category">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <% Category.all.each do |category| %>
          <% if category.has_children? %>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= category.name %></a>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <% category.children.each do |c| %>
                  <a class="dropdown-item" href="#">
                    <%= c.name %>
                  </a>
                <% end %>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </nav>
</div>
