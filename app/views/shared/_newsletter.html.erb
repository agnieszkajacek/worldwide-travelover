<% if cookies[:saved_subscriber] %>
  <div class="form-group text-align">
    <span>Wygląda na to, że już się zapisałeś!</span>
  </div>
<% else %>
  <%= simple_form_for(Subscriber.new) do |f| %>
    <div style="padding-bottom: 16px;">Zapisz się na newsletter - zero spamu, tylko informacje o nowych artykułach.</div>
    <div class="form-group">
      <%= f.input :email, input_html: {class: "form-control"}, placeholder: 'Email', label: false %>
      <%= f.input :recaptcha_token, as: :hidden, input_html: {id: :recaptcha_token_field} %>
    </div>
    <div class="">
      <%= f.submit "Zapisz", class: "newsletter-button" %>
    </div>
  <% end %>
<% end %>
