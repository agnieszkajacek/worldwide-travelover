<div class="about fancy-line">
  <span class="article-time">
    Newsletter
  </span>
</div>

<!-- MODAL NEWSLETTER
  <a data-toggle="modal" data-target="#exampleModal" class="nav-link">Nie przegap żadnych nowości, bądź na bieżąco</a>
  <%= render "shared/new_subscriber" %>
