<% if cookies[:saved_subsciber] %>
  Thanks for signing up!
<% else %>
  <h1>Sing up for my newsletter here!</h1>
    <%= simple_form_for @subscriber do |f| %>
      <div class="form-group row">
        <label class="col-sm-1 col-form-label col-form-label-sm">Name</label>
        <div class="col-sm-8">
          <%= f.input :name, {class: "form-control form-control-sm"}, label: false %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-1 col-form-label col-form-label-sm">Email</label>
        <div class="col-sm-8">
          <%= f.input :email, input_html: {class: "form-control form-control-sm"}, label: false %>
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-1 col-form-label col-form-label-sm">Email</label>
        <div class="col-sm-8">
          <%= f.input :select, collection: ['Social media', 'Friends', 'Internet', 'Other'], input_html: {class: "form-control form-control-sm"}, label: false %>
        </div>
      </div>
      <%= f.submit "Save", class: "btn btn-sm btn-outline-success" %>
    <% end %>
<% end %>
